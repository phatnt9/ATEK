<UserControl
    x:Class="ATEK.AccessControl_2.Main.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ATEK.AccessControl_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:profiles="clr-namespace:ATEK.AccessControl_2.Profiles"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type profiles:ProfilesViewModel}">
            <profiles:ProfilesView />
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" />
        <Grid Grid.Row="1">
            <TabControl>
                <TabItem Header="Profiles">
                    <ContentControl Content="{Binding ProfilesViewModel}" />
                </TabItem>
                <TabItem Header="Gates" />
            </TabControl>
        </Grid>
        <Grid Grid.Row="2" />
    </Grid>
</UserControl>