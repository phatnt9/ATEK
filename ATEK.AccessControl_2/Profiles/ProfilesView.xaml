<UserControl
    x:Class="ATEK.AccessControl_2.Profiles.ProfilesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ATEK.AccessControl_2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:CallMethodAction TargetObject="{Binding}" MethodName="LoadDataAsync" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition />
                <RowDefinition Height="10" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="profiles_btn_add" Content="Add" />
                    <Button x:Name="profiles_btn_edit" Content="Edit" />
                    <Button x:Name="profiles_btn_remove" Content="Remove" />
                    <Button x:Name="profiles_btn_refresh" Content="Refresh" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="profiles_cb_classes" />
                    <ComboBox x:Name="profiles_cb_groups" />
                    <TextBox Width="50" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <DataGrid ItemsSource="{Binding Profiles}" />
            </Grid>
            <Grid Grid.Row="3">
                <ProgressBar x:Name="profiles_pb_exportStatus" />
            </Grid>
            <Grid Grid.Row="4">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="profiles_btn_import" Content="Import" />
                    <Button x:Name="profiles_btn_export" Content="Export" />
                    <Button x:Name="profiles_btn_stop" Content="Stop" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" />
    </Grid>
</UserControl>